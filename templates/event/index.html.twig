{% extends 'base.html.twig' %}
{% block title %}Gestion Evenement{% endblock %}
{% block body %}
    <div class="container py-5">
        <div class="p-5 bg-white rounded shadow mb-5">
            <ul id="myTab" class="nav nav-tabs nav-pills flex-column flex-sm-row text-center bg-light border-0 rounded-nav">
                <li class="nav-item flex-sm-fill"><a id="home-tab" data-toggle="tab" href="#event" class="nav-link border-0 text-uppercase font-weight-bold active">Events</a></li>
                <li class="nav-item flex-sm-fill"><a id="profile-tab" data-toggle="tab" href="#participant" class="nav-link border-0 text-uppercase font-weight-bold">Participants</a></li>
            </ul>
            <div id="myTabContent" class="tab-content">
                <div id="event" class="tab-pane active">
                    <section class="event">
                        <div>
                            <div class="container">
                                <div class="row justify-content-center align-items-center">
                                    <div class="col-md-6"><h2>Bienvenue au inventaires events</h2></div>
                                    <div class="col text-center align-self-center">
                                        <a href="{{ asset('#') }}" class="btn btn-sm btn-default" style="color:#ffffff ;background-color: #bb620f">
                                            <i class="fa fa-plus-circle" aria-hidden="true" ></i> {{ 'Ajouter'|trans }}
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <table class="table table-striped table-middle-aligned">
                            <thead>
                            <tr>
                                <th scope="col">{{ 'Titre'|trans }}</th>
                                <th scope="col"><i class="fa fa-calendar" aria-hidden="true"></i> {{ 'Date Fin'|trans }}</th>
                                <th scope="col"><i class="fa fa-calendar" aria-hidden="true"></i> {{ 'Date Fin'|trans }}</th>
                                <th scope="col" class="text-center"><i class="fa fa-comments" aria-hidden="true"></i> {{ 'Plan'|trans }}</th>
                                <th scope="col" class="text-center"><i class="fa fa-location-arrow" aria-hidden="true"></i> {{ 'VILLES'|trans }}</th>
                                <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> {{ 'Actions'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for event in events %}
                                <tr>
                                    <td>{{ event.nom }}</td>
                                    <td>{{ event.datedebut |date ('d/m/y')}}</td>
                                    <td>{{ event.datefin |date ('d/m/y')}}</td>
                                    <td>{{ event.plan }}</td>
                                    <td>{{ event.ville }}</td>
                                    <td class="text-right">
                                        <div class="item-actions">
                                            <a href="{{ path('showarticleAdmin', {id: event.id}) }}" class="btn btn-sm btn-default">
                                                <i class="fa fa-eye" aria-hidden="true"></i> {{ 'Afficher'|trans }}
                                            </a>
                                            <a href="{{ path('showarticleAdmin', {id: event.id}) }}" class="btn btn-sm btn-primary">
                                                <i class="fa fa-edit" aria-hidden="true"></i> {{ 'Modifier'|trans }}
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" align="center">{{ 'Pas d\'evenement pour le moment' |trans }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </section>
                </div>
                <div id="participant" class="tab-pane ">
                    <h1>En cours de traitement1</h1>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
