{% extends 'base.html.twig' %}
{% block css %}
    <!-- Favicons -->
    <link href="/Backend/img1/favicon.png" rel="icon">
    <link href="/Backend/img1/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Bootstrap core CSS -->
    <link href="/Backend/lib1/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!--external css-->
    <link href="/Backend/lib1/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="/Backend/css1/zabuto_calendar.css">
    <link rel="stylesheet" type="text/css" href="/Backend/lib1/gritter/css/jquery.gritter.css" />
    <!-- Custom styles for this template -->
    <link href="/Backend/css1/style.css" rel="stylesheet">
    <link href="/Backend/css1/style-responsive.css" rel="stylesheet">
    <script src="/Backend/lib1/chart-master/Chart.js"></script>

