{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <div class="panel-title">Nouveau Stage :</div>
    <div class="form-panel">
        <table>

            {{ form_start(form,{'attr':{'no validate': 'novalidate'}}) }}
            <tr>
                <td>{{ form_label(form.NomEntreprise,"NomEntreprise") }}</td>
                <td> {{ form_widget(form.NomEntreprise) }}</td>
            </tr>
            <tr>
                <td> {{ form_label(form.Description,"Description") }}</td>
                <td>{{ form_widget(form.Description) }}</td>
            </tr>
            <tr>
                <td>{{ form_label(form.stage_id,"stage_id") }}</td>
                <td>{{ form_widget(form.stage_id) }}</td>
            </tr>


        </table>
        {{ form_end(form) }}
    </div>
