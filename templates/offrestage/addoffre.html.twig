            </tr>
            <tr>
                <td> {{ form_label(form.Description,"Description") }}</td>
                <td>{{ form_widget(form.Description) }}</td>
            <tr><td> {{ form_errors(form.Description) }}</td></tr>
            </tr>
            <tr>
                <td>{{ form_label(form.stage_id,"Stage") }}</td>
                <td>{{ form_widget(form.stage_id) }}</td>
            <tr><td> {{ form_errors(form.stage_id) }}</td></tr>
            </tr>


        </table>
        {{ form_end(form) }}
    </div>
