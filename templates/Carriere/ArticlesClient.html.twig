{% extends 'front.html.twig' %}
{% block body %}
<body>
  <nav class="navbar navbar-light navbar-expand fixed-top" style="background-color: #eeeeee;">
        <div class="container-fluid"><img src="{{ asset('assets/img/LOGO.png') }}" style="height: 91px;width: 82px;"><a
                    href="#" style="color: rgb(230,160,79);font-size: 31px;font-family: 'Alfa Slab One', cursive;">E-MPLOYINI</a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="nav navbar-nav ml-auto">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" href="/Articles" style="color: #bb620f;font-weight: bold;">Conseil Carriere</a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" href="/LettreM" style="color: #bb620f;font-weight: bold;">Lettres
                            de motivation</a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" href="/CV"
                                                                style="color: #bb620f;font-weight: bold;">CV</a></li>
                </ul>
            </div>
        </div>
    </nav>
  <main class="page lanidng-pag" >
     <section class="portfolio-block photography" >
      <header class="overlay" style="background-image: url('https://cdn.seeklearning.com.au/media/images/career-guide/article/career-advice/web_images/blogs/214/2416/3_common_career_progression_questions_940x485.jpg');text-align: center;width: 100%;height: 300px;background-size: cover;background-attachment: fixed;position: relative;overflow: hidden;border-radius: 0 0 85% 82% / 38%;">
           <div class="overlay" style="text-shadow: 1px 1px 1px #333; width: 100%; height: 100%; background-color: rgba(171,89,29,0.27);padding: 50px">
                <h1 style="color: rgb(255,255,255);">Conseil Crrière</h1>
                <h3 style="color: rgb(255,255,255);">Bienvenue</h3>
                <p style="color: rgb(255,255,255);">Vous trouverez ici tous les guides qui vous intéressent</p>
                <a class="btn btn-light borderendondeado" type="button" href="{{ asset('/Articles') }}">Home</a>
              </div>
          </header>
           <div class="card-group col-md-6" style="margin-left: 370px" >
              {% for articl in articles %}
                <div style="margin-right: 5px">
                  <figure class="snip1253">
                    <div class="image">
                        {% if articl.image %}
                            <img src="{{ vich_uploader_asset(articl,'imageFile') }}"/>
                        {% endif %}
                    </div>
                   <figcaption>
                     <h2>{{ articl.Titre }}</h2>
                      <p>
                       {{ articl.Resume | raw }}
                      </p>
                   </figcaption>
                  <div class="footer footer-link"
                                         style="background-color:#eea236;  padding:15px; text-align: right">
                                        <a style="color: #FFFFFF; margin-right: 20px;" class="ion-eye"
                                           href="{{ path('AfficheUnArticleClient',{'id':articl.id}) }}">see more</a>
                                        <a href="{{ path('article_like',{'id':articl.id}) }}" style="color: #FFFFFF; margin-right:120px;" class="btn btn-link js-like">
                                           {% if app.user and articl.isLikedByUser(app.user) %}
                                                <i class="fas fa-thumbs-up"></i>
                                             {% else %}
                                                <i class="far fa-thumbs-up"></i>
                                           {% endif %}
                                            <span class="js-likes">{{ articl.likes | length }}</span>
                                            <span class="js_label">j'aime</span>
                                        </a>
                                    </div>
                  </figure>
                </div>
              {% endfor %}
           </div>
        <div class="pagination justify-content-center ">
          {{ knp_pagination_render(articles) }}
        </div>
     </section>
     <section class="portfolio-block skills">
       <div class="container">
              <div class="heading">
               <h2>CITATION DU JOUR</h2>
              </div>
               <div class="row">
                 <div class="col-md-4">
                 <div class="card special-skill-item border-0">
                         <div class="card-header bg-transparent border-0"><i class="icon ion-ios-star-outline"
                                                                                style="background-color: rgb(237,128,27);"></i>
                       </div>
                         <div class="card-body">
                                <h3 class="card-title">Soft Skills</h3>
                                <p class="card-text" style="font-weight: bold;">A l’inverse des compétences techniques,
                                    il n’est pas possible de déléguer aux robots les compétences
                                    comportementales.<br><br>Jérôme Hoarau<br></p>
                            </div>
                   </div> </div>
                  <div class="col-md-4">
                      <div class="card special-skill-item border-0">
                        <div class="card-header bg-transparent border-0"><i class="icon ion-ios-lightbulb-outline" style="background-color: rgb(237,128,27);"></i></div>
                        <div class="card-body">
                                <h3 class="card-title">Innovation</h3>
                                <p class="card-text" style="font-style: normal;font-weight: bold;">Encouragez
                                    l’innovation. Le changement est notre force vitale, la stagnation notre
                                    glas.<br><br>David M. OgilvyDe David M. Ogilvy<br></p>
                          </div>
                      </div>
                  </div>
                  <div class="col-md-4">
                        <div class="card special-skill-item border-0">
                            <div class="card-header bg-transparent border-0"><i class="icon ion-ios-gear-outline"
                                                                                style="background-color: rgb(237,128,27);"></i>
                            </div>
                            <div class="card-body">
                                <h3 class="card-title">Intérêts&nbsp;</h3>
                                <p class="card-text" style="font-weight: bold;"><br>Chacun préfère son&nbsp;<strong>intérêt</strong>&nbsp;à
                                    celui du prochain.<br><br>Proverbe latin.</p>
                            </div>
                        </div>
                    </div></div>
        </div>
     </section>
  </main>
    <section class="portfolio-block website gradient"
             style="background-image: url({{ asset('assets/img/imageonline-co-whitebackgroundremoved.png') }});background-color: #eeeeee;background-repeat: no-repeat;">
        <div class="container">
            <div class="row align-items-center" style="opacity: 0.88;">
                <div class="col-md-12 col-lg-5 offset-lg-1 text">
                    <h3 style="color: rgb(221,119,0);">E-MPLOYINI</h3>
                    <p style="color: rgb(18,0,0);">Nous vous offrons <br>toujours les nouvelles actualités.</p>
                </div>
                <div class="col-md-12 col-lg-5">
                    <p style="color: rgb(18,0,0);">Première plateforme tunisienne qui vous guide pas à pas.</p>
                    <div class="portfolio-laptop-mockup"></div>
                </div>
            </div>
        </div>
    </section>
    <footer class="page-footer" style="background-color: #eeeeee;width: 1324px;">
        <div class="container">
            <div class="links"><a href="#">About us</a><a href="#">Contact us</a></div>
            <div class="social-icons"><a href="#"><i class="icon ion-social-facebook"></i></a><a href="#"><i
                            class="icon ion-social-instagram-outline"></i></a><a href="#"><i
                            class="icon ion-social-twitter"></i></a></div>
        </div>
    </footer>
</body>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js') }}">
        function onClickBtnLike(event){
            event.preventDefault();
            const  url = this.href;
            axios.get(url).then(function (response){
                console.log(response);
            })
        }
        document.querySelectorAll('a.js-like').forEach(function (link){
            link.addEventListener('click',onClickBtnLike);
        })
    </script>
    <script>
        
    </script>
{% endblock %}