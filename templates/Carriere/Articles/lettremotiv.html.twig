{% extends 'front.html.twig' %}

{% block title %}Lettre de motivation{% endblock %}

{% block body %}
<body>

 <main>
    <section class="text-center" id="modeleLM">
        <header class="overlay" style="background-image: url('https://images.prismic.io/cadremploi-edito/MzViZDA3YTQtNWYwNS00ZTllLWE2MjctOGU3YzMyY2NjM2Ji_shutterstock_272975228.jpg?auto=compress,format&rect=0,83,1000,500&w=800&h=400');
  text-align: center;
  width: 100%;
  height: 300px;
  background-size: cover;
  background-attachment: fixed;
  position: relative;
  overflow: hidden;
  border-radius: 0 0 85% 82% / 38%;
">
            <div class="overlay" style="text-shadow: 1px 1px 1px #333; width: 100%; height: 100%; background-color: rgba(171,89,29,0.27);padding: 50px">
                <h1 style="color: rgb(255,255,255);">Modele de Lettre de motivation</h1>
                <h3 style="color: rgb(255,255,255);">Bienvenue</h3>
                <p style="color: rgb(255,255,255);">Vous trouverez ici tous les modeles de lettres qui vous intéressent</p>
                <a class="btn btn-light borderendondeado" type="button" href="{{ asset('/Articles') }}">Retour</a>

            </div>
        </header>
        <div class="card-deck">
            {% for lm in lms %}
                <div class="card" style="align-items: center" >
                    <div class="image" style="width:200px" >
                        <img  class="card-img-top" src="{{ vich_uploader_asset(lm,'apercuFile') }}" alt="Card image cap">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Modele {{ lm.nom }}</h5>
                        <p class="card-text">{{ lm.description}} </p>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">
                            <a href="#"><i class="fa fa-cloud-download" id="download-icon">
                                    Télècharger
                                </i></a></small>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
 </main>
</body>
{% endblock %}