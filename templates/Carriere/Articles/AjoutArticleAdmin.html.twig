{% extends 'base.html.twig' %}
{% form_theme formArticle 'bootstrap_4_layout.html.twig' %}

{% block body %}
    <h1>Ajouter un article</h1>
    {{ form_start(formArticle) }}
    {{ form_row(formArticle.titre, {'attr':{'placeholder':"Titre de l article"}}) }}
    {{ form_row(formArticle.resume, {'attr':{'placeholder':"Resume de l article"}}) }}
    {{ form_row(formArticle.contenu, {'attr':{'placeholder':"Contenu de l article"}}) }}
    {{ form_row(formArticle.imageFile, {'attr':{'placeholder':"inserez l image"}}) }}

    <button type="submit" class="btn btn-success" > Ajouter </button>
    {# <button type="submit" class="btn btn-success" > Ajouter </button> #}
    {{ form_end(formArticle) }}
{% endblock %}