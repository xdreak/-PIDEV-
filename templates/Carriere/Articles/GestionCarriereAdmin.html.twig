{% extends 'base.html.twig' %}
{% block title %} Bienvenue à votre inventaire Conseil Carriere {% endblock %}
{% block body %}
    <div class="container py-5">
        <div class="p-5 bg-white rounded shadow mb-5">
            <ul id="myTab" class="nav nav-tabs nav-pills flex-column flex-sm-row text-center bg-light border-0 rounded-nav">
                <li class="nav-item flex-sm-fill"><a id="article-tab" data-toggle="tab" href="#article" class="nav-link border-0 text-uppercase font-weight-bold active">Articles</a></li>
                <li class="nav-item flex-sm-fill"><a id="cv-tab" data-toggle="tab" href="#cv" class="nav-link border-0 text-uppercase font-weight-bold">Modeles CV</a></li>
                <li class="nav-item flex-sm-fill"><a id="lm-tab" data-toggle="tab" href="#lm" class="nav-link border-0 text-uppercase font-weight-bold">Lettre de motivation</a></li>
            </ul>
            <div id="myTabContent" class="tab-content">
                <div id="article" class="tab-pane active">
                    <section class="articles">
                        <div>
                            <div class="container">
                                <div class="row justify-content-center align-items-center">
                                    <div class="col-md-6"><h2>Bienvenue au inventaires articles</h2></div>
                                    <div class="col text-center align-self-center">
                                        <a href="{{ path('AjoutArticle') }}" class="btn btn-sm btn-default" style="color:#ffffff ;background-color: #bb620f">
                                         <i class="fa fa-plus-circle" aria-hidden="true" ></i> {{ 'Ajouter un article'|trans }}
                                        </a>
                                        <a id="triup" href="{{ path('triup') }}" class="btn btn-sm btn-default" style="color:#ffffff ;background-color: #bb620f">
                                            <i class="fa fa-arrow-up" aria-hidden="true" ></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                         <table class="table table-striped table-middle-aligned">
                            <thead>
                            <tr>
                                <th scope="col">{{ 'Titre'|trans }}</th>
                                <th scope="col"><i class="fa fa-calendar" aria-hidden="true"></i> {{ 'Publie le'|trans }}</th>
                                <th scope="col"><i class="fa fa-comments" aria-hidden="true"></i> {{ 'Contenu'|trans }}</th>
                                <th scope="col" class="text-center"><i class="fa fa-photo" aria-hidden="true"></i> {{ 'Image'|trans }}</th>
                                <th scope="col" class="text-center"><i class="fa fa-thumbs-up" aria-hidden="true"></i> {{ 'LIKES'|trans }}</th>
                                <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> {{ 'Actions'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for articl in articles %}
                                <tr>
                                    <td>{{ articl.Titre }}</td>
                                    <td>{{ articl.Publiele |date ('d/m/y')}}</td>
                                    <td>{{ articl.Resume }}</td>
                                    <td> {{ articl.image }}</td>
                                    <td>{{ articl.likes | length }}</td>
                                    <td class="text-right">
                                        <div class="item-actions">
                                            <a href="{{ path('AfficherUnArticle', {id: articl.id}) }}" class="btn btn-default btn-sm btn-block fa fa-eye" aria-hidden="true"></a>
                                            <a href="{{ path('ModifierArticle', {id: articl.id}) }}" class="btn  btn-primary btn-sm btn-block fa fa-edit" aria-hidden="true"></a>
                                            <a href="{{ path('SupprimerArticle', {id: articl.id}) }}" onclick="confirm('vous êtes sure de supprimer cet article')" class="btn btn-danger btn-sm btn-block fa fa-trash" aria-hidden="true"></a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </section>
                </div>
                <div id="cv" class="tab-pane">
                    <section class="cv">
                        <div>
                            <div class="container">
                                <div class="row justify-content-center align-items-center">
                                    <div class="col-md-6"><h2>Bienvenue au inventaires CV</h2></div>
                                    <div class="col text-center align-self-center">
                                        <a href="{{ path('AjoutDocument') }}" class="btn btn-sm btn-default" style="color:#ffffff ;background-color: #bb620f">
                                            <i class="fa fa-plus-circle" aria-hidden="true" ></i> {{ 'Ajouter un CV'|trans }}
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <table class="table table-striped table-middle-aligned">
                            <thead>
                            <tr>
                                <th scope="col">{{ 'Titre'|trans }}</th>
                                <th scope="col"><i class="fa fa-comments" aria-hidden="true"></i> {{ 'Description'|trans }}</th>
                                <th scope="col" class="text-center"><i class="fa fa-photo" aria-hidden="true"></i> {{ 'Image'|trans }}</th>
                                <th scope="col" class="text-center"><i class="fa fa-file" aria-hidden="true"></i> {{ 'PDF'|trans }}</th>
                                <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> {{ 'Actions'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for cv in cvs %}
                                <tr>
                                    <td>{{ cv.nom }}</td>
                                    <td>{{ cv.description }}</td>
                                    <td> {{ cv.apercu }}</td>
                                    <td>{{ cv.pdf}}</td>
                                    <td class="text-right">
                                        <div class="item-actions">
                                            <a href="{{ path('AfficherUnDocument', {id: cv.id}) }}" class="btn btn-default btn-sm btn-block fa fa-eye" aria-hidden="true"></a>
                                            <a href="{{ path('ModifierDocument', {id: cv.id}) }}" class="btn  btn-primary btn-sm btn-block fa fa-edit" aria-hidden="true"></a>
                                            <a href="{{ path('SupprimerDocument', {id: cv.id}) }}" onclick="confirm('vous êtes sure de supprimer cet article')" class="btn btn-danger btn-sm btn-block fa fa-trash" aria-hidden="true"></a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </section>
                </div>
                <div id="lm" class="tab-pane ">
                    <section class="cv">
                        <div>
                            <div class="container">
                                <div class="row justify-content-center align-items-center">
                                    <div class="col-md-6"><h2>Bienvenue au inventaires Letrre de Motivation</h2></div>
                                    <div class="col text-center align-self-center">
                                        <a href="{{ path('AjoutDocument') }}" class="btn btn-sm btn-default" style="color:#ffffff ;background-color: #bb620f">
                                            <i class="fa fa-plus-circle" aria-hidden="true" ></i> {{ 'Ajouter une LM'|trans }}
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <table class="table table-striped table-middle-aligned">
                            <thead>
                            <tr>
                                <th scope="col">{{ 'Titre'|trans }}</th>
                                <th scope="col"><i class="fa fa-comments" aria-hidden="true"></i> {{ 'Description'|trans }}</th>
                                <th scope="col" class="text-center"><i class="fa fa-photo" aria-hidden="true"></i> {{ 'Image'|trans }}</th>
                                <th scope="col" class="text-center"><i class="fa fa-file" aria-hidden="true"></i> {{ 'PDF'|trans }}</th>
                                <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> {{ 'Actions'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for lm in lms %}
                                <tr>
                                    <td>{{ lm.nom }}</td>
                                    <td>{{ lm.description }}</td>
                                    <td> {{ lm.apercu }}</td>
                                    <td>{{ lm.pdf}}</td>
                                    <td class="text-right">
                                        <div class="item-actions">
                                            <a href="{{ path('AfficherUnDocument', {id: lm.id}) }}" class="btn btn-default btn-sm btn-block fa fa-eye" aria-hidden="true"></a>
                                            <a href="{{ path('ModifierDocument', {id: lm.id}) }}" class="btn  btn-primary btn-sm btn-block fa fa-edit" aria-hidden="true"></a>
                                            <a href="{{ path('SupprimerDocument', {id: lm.id}) }}" onclick="confirm('vous êtes sure de supprimer cet article')" class="btn btn-danger btn-sm btn-block fa fa-trash" aria-hidden="true"></a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
        </div>
    </div>
