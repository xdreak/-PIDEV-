</head>
   {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
<h1>Liste des formations</h1>
<table class="table table-hover">
<thead>
<tr>
<th>ID</th>
<th>Titre</th>
<th>Date Debut</th>
<th>Date Fin</th>
<th>Editer</th>
</tr>
</thead>
<tbody>
{% for formation in formations %}
<tr>
<td>{{formation.id}}</td>
<td>{{formation.Titre}}</td>
<td>{{formation.Date |date('Y-m-d')   }}</td>
<td>{{formation.DateFin |date('Y-m-d')   }}</td>
<td>
<a href="/formation/afficher/{{ formation.id }}" class="btn btn-dark">Afficher</a>
<a href="/formation/delete/{{ formation.id }}" class="btn btn-danger delete-article" data-id="{{ formation.id }}">Supprimer</a>
  <a href="/formation/modifier/{{ formation.id }}"  class="btn btn-primary">Modifier</a></td>
</tr>
{% endfor %}
</tbody>
</table>
{% else %}
<p>No formations to display</p>    
{% endif %}

